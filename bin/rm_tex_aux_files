#!/bin/bash

for ext in aux out toc lof lot mw nav snm synctex.gz maf ptc bcf bbl run.xml idx ilg ind cpt
do
    (
        for f in $(find . -type f -iname \*.$ext | grep -ve /.git/)
        do
            rm $f
        done
    )&
done

for f in $(find . -type f -regex .*mtc[0-9]* | grep -ve /.git/)
do
    rm $f
done &

for f in $(find . -type f -iname \*-blx.bib | grep -ve /.git/)
do
    rm $f
done &

wait
