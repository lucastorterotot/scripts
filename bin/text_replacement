#!/bin/bash

recursive=0
dry_run=0
preserve_timestamps=0
for arg in "$@"; do
    case "$arg" in
        -r)
            recursive=1
            shift
            ;;
        -n)
            dry_run=1
            shift
            ;;
        --dry_run)
            dry_run=1
            shift
            ;;
        -t)
            preserve_timestamps=1
            shift
            ;;
        --time)
            preserve_timestamps=1
            shift
            ;;
    esac
done

printf "Looking for matching files...\n"

if [[ $recursive == 0 ]]
then
    files=$(find $(pwd) -maxdepth 1 -type f -iname $3)
else
    files=$(find $(pwd) -type f -iname $3)
fi

for file in $files
do
    if [[ $(grep -l $file -e "$1") == $file ]]
    then
        printf "$file\n"
        if [[ $dry_run == 0 ]]
        then
            timestamp=$(date --rfc-3339=ns -r $file)
            sed -i "s|$1|$2|g" $file
            if [[ $preserve_timestamps == 1 ]]
            then
                touch -d "$timestamp" $file
            fi
        fi
    fi
done


