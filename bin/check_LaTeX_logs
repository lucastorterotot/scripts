#!/bin/bash

# Look in all log files if there is an error or warning message identified as being of interest

echo ''
echo 'Checking LaTeX log files ...'
echo ''
grep -r --color --include="*.log" -e 'Overfull' -e 'Underfull' -e 'undefined on input line' -e 'multiply defined' -e 'Rerun to get cross-references right' -e 'Please (re)run' -e 'reprocess' -e 'feynmp: Process' -e 'feynmf: Process' -e '! Emergency stop.' -e '! LaTeX Error:' -e 'Fatal error occurred' -e 'Undefined control sequence' -e 'Too many ' -e 'Missing $ inserted' -e 'Runaway argument?' -e 'undefined references' -e 'no output file produced' -e 'not found when defining image' -e 'Float too large for page' -e 'number too big' -e 'Collision between wrapping environments'
# -e 'multiply-defined'
echo ''
echo 'Checking Bibs log files ...'
grep -r --color --include="*.blg" -ve 'does not contain any citations!' -e 'No data sources defined' | grep --color -e 'WARN ' -e 'Warning--'
echo ''
echo ''
echo 'LaTeX and Biber log files checked.'
